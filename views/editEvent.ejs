<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DashBoard</title>
    <!-- icons -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> -->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <style>
        #titleContainer, .deadline{
            text-align: center;
            font-size: 24px; 
            margin-bottom: 30px;
        }
        #titleContainer input[type=text] {
            width: 60%;
            height: 30px;
            font-size: 24px;
        }
        img{
            max-width: 15vmax;
            max-height: 15vmax;
        }
        #editor, header, footer{
            width:70%;
            margin: 2rem auto;
            padding: 1rem;
            font-size: 1.2rem;
            box-shadow: 0 .1rem .4rem black;
            border: 1px solid black;
            /* overflow-y: auto; */
        }
        header, footer {
            min-height: 5vh;
        }
        #editor {
            min-height: 40vh;
        }
        section #toolbar, section #button, section #title{
            /* max-width: 800px; */
            text-align: center;
            margin: auto;
        }
        button[type=submit] {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            /* width: 100%; */
            width: 300px;
            font-size:24px;
        }
        button[type=submit]:hover {
            opacity: 0.7;
        }
    </style>
</head>
<body>
    <%- include('partials/sidenavbar.ejs') %>
    <div class="main">
        <!-- action="/event/edit/<%=event._id%>" method="POST" -->
        <form id="form">
        <section>
            <div id="id" style="display: none;"><%=event._id%></div>
            <!-- <label for="date">Event Date</label>
            <input type="datetime-local" name="date" id="date" value="<%= event.date %>" required> -->
    
            <div id="titleContainer">
                <!-- <label for="title">Title</label> -->
                <!-- <input type="text" name="title" id="title" value="<%= event.title %>"> -->
                <!-- <br> -->
                <span>Title: </span>
                <input type="text" id="title" value="<%= event.title %>">
                <br>
                <span>Event Timing: </span>
                <input type="datetime-local" name="datetime" id="datetime" value="<%= startdate %>" required>
                <!-- <input type="date" name="eventdate" id="date">
                <input type="time" name="eventtime" id="time"> -->
                <!-- <h1 id="title" contenteditable="true"><%= event.title %></h1> -->
            </div>
            <div>
                <div id="toolbar">
                    <button type="button" class="tool-items fa fa-underline fa-2x" onclick="document.execCommand('underline', false, '');"></button>
                    <button type="button" class="tool-items fa fa-italic fa-2x" onclick="document.execCommand('italic', false, '');"></button>
                    <button type="button" class="tool-items fa fa-bold fa-2x" onclick="document.execCommand('bold', false, '');"></button>
                    <button type="button" class="tool-items fa fa-link fa-2x" onclick="link()"></button>
                    <button class="tool-items fa fa-scribd fa-2x" type="button" onclick="fontSize();"> </button>
                    <button class="tool-items fa fa-font fa-2x" type="button" onclick="fontName()"></button>
                    <button type="button" class="tool-items fa fa-tint fa-2x" onclick="changeColor()"></button>
                    <input type="file" accept="image/*" id="file" style="display: none;" oninput="getImage()">
                    <label for="file" class="tool-items fa fa-file-image-o fa-2x"></label>
                    <!-- Justify -->
                    <button type="button" class="tool-items fa fa-align-center fa-2x" onclick="document.execCommand('justifyCenter',false,'')"></button>
                    <button type="button" class="tool-items fa fa-align-left fa-2x" onclick="document.execCommand('justifyLeft',false,'')"></button>
                    <button type="button" class="tool-items fa fa-align-right fa-2x" onclick="document.execCommand('justifyRight',false,'')"></button>
                </div>
                <div id="header"><header contenteditable="true"><%- event.header %></header></div>
                <div id="editor" contenteditable="true"><div><%- event.content %></div></div>
                <div id="footer"><footer contenteditable="true"><%- event.footer %></footer></div>
                <div class="deadline">
                    <span>Deadline to accept the invitation: </span>
                    <input type="datetime-local" name="deadline" id="deadline" value=<%= deadline %>>
                </div>
            </div>
            <div id="button">
                <button type="submit" id="submit">Submit</button>
            </div>
        </section>
    </form> 
    </div>
    <script src="/js/editEvent.js"></script>
    <script src="/js/sidenavbar.js"></script>
</body>
</html>