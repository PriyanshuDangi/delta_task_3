<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('partials/sidenavbar.ejs') %>

    <style>
        .container{
            /* max-width: 600px; */
            width: 40%;
            margin: auto;
            font-size: 1.5vmax;
        }
        .container .items{
            border: 1px white solid;
            width: 90%;
            margin: 10px auto 5px;
            min-height: 30px;
            color: black;
            background-color: rgb(0, 206, 209, 0.9);
            padding-left: 20px;
            padding-right: 20px;
        }
        .container a{
            text-decoration: none;
        }
        .container .heading{
            font-size: 2.2vmax;
            text-align: center;
        }
    </style>
    <div class="main">
        <div class="container">
            <div class="heading">
                <h1>Notifications</h1>
            </div>
            <% notification.forEach((notif)=>{%>
                <% if(notif.type == "accepted"){ %>
                    <a href="/profile/<%=notif.username%>">
                        <div class="items">                       
                            <p><%= notif.username %> accepted your invitation for the event:- <%= notif.eventTitle%></p>
                        </div>
                    </a>
                <% } %>
                <% if(notif.type == "invited"){ %>
                    <a href="/event/other/view/<%= notif.eid %>">
                        <div class="items">
                            <p><%= notif.username %> invite you for the event:- <%= notif.eventTitle%></p>
                        </div>
                    </a>
                <% } %>
            <%}) %>
        </div>
    </div>
    <script src="/js/sidenavbar.js"></script>
</body>
</html>